# Tally Dashboard - Backend Configuration
# Copy this to .env and adjust values

# Path to watch for incoming Tally XML files
TALLY_INBOX=/data/tally_inbox

# SQLite DB path (relative to backend/ or absolute)
DATABASE_URL=sqlite:///./tally_dashboard.db

# API server settings
API_HOST=0.0.0.0
API_PORT=8000

# Enable/disable auth (set to "false" for dev)
AUTH_ENABLED=false
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Frontend URL for CORS (comma separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Watcher poll interval in seconds (fallback)
WATCHER_POLL_INTERVAL=5
